<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileTracking.Pages.LoginPage"
             xmlns:handlers="clr-namespace:MobileTracking.Handlers"
             Title="LoginPage">
    <Grid VerticalOptions="FillAndExpand" >


        <VerticalStackLayout VerticalOptions="Center">
        <Border>
                <handlers:BorderlessEntry Placeholder="Entrar" Text="{Binding Id}"></handlers:BorderlessEntry>
        </Border>
                <Button Text="Criar conta" Command="{Binding LoginCommand}"/>

        </VerticalStackLayout>
        <VerticalStackLayout VerticalOptions="End">
            <Button Text="Criar conta" Command="{Binding GenerateCommand}"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>